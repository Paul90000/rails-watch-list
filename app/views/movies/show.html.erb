<div class="container">
  <div class="d-flex flex-column align-items-center mt-5">
    <div class="card card-hover-blue mb-3" style="max-width: 540px;">
      <div class="row g-0">
        <div class="col-md-4">
          <img src="<%= @movie.poster_url %>" class="img-fluid rounded-start" alt="Movie">
        </div>
        <div class="col-md-8">
          <div class="card-body">
            <h5 class="card-title"><%= @movie.title %></h5>
            <p class="card-text"><%= @movie.overview %></p>
            <p class="card-text"><small class="text-body-secondary">Last updated 3 mins ago</small></p>
            <p><small class="text-muted"><strong>Rating:</strong> <%= @movie.rating %></small></p>
            <%= link_to 'Back to Movies', movies_path, class: "link-button" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
