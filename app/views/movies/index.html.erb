<div class="container d-flex flex-column ">


  <div class="movie-cards-grid row gap-5">
  <div class="d-flex flex-sm-column align-items-start">
    <h1 class="mt-3 mb-3 pe-3">Movies</h1>
    <%= link_to 'View All Lists', lists_path, class: "link-button" %>
  </div>
      <% @movies.each do |movie| %>
        <div class="card card-hover-black p-1 col-md-5 align-items-center" id="movie-card" style="width: 18rem;">
          <img class="card-img-top" src="<%= movie.poster_url %>" alt="movie">
          <div class="card-body">
            <h5 class="card-title"><%= movie.title %></h5>
            <p class="card-text"><%= movie.overview %></p>
          </div>
          <ul class="list-group list-group-flush" id="ratings-movies-display">
            <li class="list-group-item">Ratings: <%= movie.rating %></li>
          </ul>
          <div class="card-body show-text-movie">
            <%= link_to 'Explore', movie_path(movie), class: "link-edit", id: "explore-movies-display"%>
          </div>
        </div>
      <% end %>
  </div>

</div>
