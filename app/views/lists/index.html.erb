<div class="container">
  <div class="d-flex justify-content-center mt-5">

    <div class="d-flex flex-column align-items-center justify-content-md-between">
      <h1>Lists</h1>
      <ul class="ul-card-list card-hover-blue">
        <% @lists.each do |list| %>
          <li>
            <%= link_to list.name, list, class: "link-edit" %>
          </li>
        <% end %>
      </ul>
    <div>
    <div class="d-flex align-items-center">
      <%= link_to 'Back to Movies', movies_path, class: "link-button me-3" %>
      <%= link_to 'New List', new_list_path, class: "link-button" %>
    </div>

  </div>
</div>
