
<div class="container">
  <div class="d-flex flex-column align-items-center">


      <h1><%= @list.name %></h1>
      <%= link_to 'Add Bookmark', new_list_bookmark_path(@list), class: "link-button" %>
    <div class="d-flex flex-column align-items-center">
      <h2>Bookmarks:</h2>
      <ul>
        <% @list.bookmarks.each do |bookmark| %>
          <li class="p-1">
            <%= bookmark.movie.title %>
          </li>
            <%= bookmark.comment %>
          </li>
        <% end %>
      </ul>
      <%= link_to 'Back', lists_path, class: "link-edit" %>
    </div>

  </div>
</div>
